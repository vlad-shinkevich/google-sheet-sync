{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["@figma/plugin-typings", "node", "vite/client"]
  },
  "include": ["src", "vite.code.config.ts", "vite.ui.config.ts"],
  "exclude": ["node_modules", "dist"]
}
